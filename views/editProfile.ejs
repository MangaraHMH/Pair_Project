<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Edit Profile</title>
</head>
<body>
    <nav class="navbar bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img src="https://www.kindpng.com/picc/m/553-5530904_phoenix-bird-hd-png-download.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
            Tweetward
          </a>
          <a href="/" class="nav-link active">Logout</a>
        </div>
      </nav>

    <form method="post" enctype="multipart/form-data">
        <div class="container">
  <% data.forEach(x => { %>
   
            <div class="form-group">
              <label for="username">UserName</label>
              <input type="text" class="form-control" name="userName" value="<%= x.userName %> " id="username" placeholder="username">
            </div> <br>

            <div class="form-group">
              <label for="picture">Profile Picture</label>
              <input type="file" class="form-control" name="profilePicture" value="<%= x.profilePicture %> " id="picture" placeholder="profile picture">
            </div>
            <div class="form-group">
                <label for="bio">Bio</label>
                <input type="text" class="form-control" name="bio" value="<%= x.bio %> " id="bio" placeholder="bio">
              </div> 
  
              <div class="form-group">
                <label for="number">Phone Number</label>
                <input type="text" class="form-control" name="phoneNumber" value="<%= x.phoneNumber %> "  id="number" placeholder="phone number">
              </div>
                <div class="form-group">
              <label for="hobby">Hobby</label>
              <input type="text" class="form-control" name="hobby" value="<%= x.hobby %> " id="hobby" placeholder="hobby">
            </div>
        </div> <br>
        <% }) %>

        <button type="submit" class="btn btn-outline-info" style="margin-left: 42% ;">Submit changes</button>
      </form>
</body>
</html>